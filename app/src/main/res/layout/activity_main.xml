<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@android:color/white">

    <!-- Hiển thị kết quả -->
    <TextView
        android:id="@+id/resultTv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="48sp"
        android:gravity="end|center_vertical"
        android:padding="16dp"
        android:text="0"
        android:textColor="@android:color/black"
        android:background="@android:color/darker_gray"/>

    <!-- GridLayout chứa các nút bấm -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        android:paddingTop="8dp"
        android:background="@android:color/white">

        <!-- Hàng 1 -->
        <Button android:id="@+id/button_ce" android:text="CE" style="@style/CalcButton"/>
        <Button android:id="@+id/button_c" android:text="C" style="@style/CalcButton"/>
        <Button android:id="@+id/button_bs" android:text="BS" style="@style/CalcButton"/>
        <Button android:id="@+id/button_divide" android:text="/" style="@style/CalcButton"/>

        <!-- Hàng 2 -->
        <Button android:id="@+id/button_7" android:text="7" style="@style/CalcButton"/>
        <Button android:id="@+id/button_8" android:text="8" style="@style/CalcButton"/>
        <Button android:id="@+id/button_9" android:text="9" style="@style/CalcButton"/>
        <Button android:id="@+id/button_multiply" android:text="x" style="@style/CalcButton"/>

        <!-- Hàng 3 -->
        <Button android:id="@+id/button_4" android:text="4" style="@style/CalcButton"/>
        <Button android:id="@+id/button_5" android:text="5" style="@style/CalcButton"/>
        <Button android:id="@+id/button_6" android:text="6" style="@style/CalcButton"/>
        <Button android:id="@+id/button_minus" android:text="-" style="@style/CalcButton"/>

        <!-- Hàng 4 -->
        <Button android:id="@+id/button_1" android:text="1" style="@style/CalcButton"/>
        <Button android:id="@+id/button_2" android:text="2" style="@style/CalcButton"/>
        <Button android:id="@+id/button_3" android:text="3" style="@style/CalcButton"/>
        <Button android:id="@+id/button_add" android:text="+" style="@style/CalcButton"/>

        <!-- Hàng 5 -->
        <Button android:id="@+id/button_negate" android:text="+/-" style="@style/CalcButton"/>
        <Button android:id="@+id/button_0" android:text="0" style="@style/CalcButton"/>
        <Button android:id="@+id/button_dot" android:text="." style="@style/CalcButton"/>
        <Button android:id="@+id/button_equals" android:text="=" style="@style/CalcButton"/>

    </GridLayout>

</LinearLayout>
